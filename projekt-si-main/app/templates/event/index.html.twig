{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.event_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.event_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <th>
            <a href="{{ url('event_create') }}" title="{{ 'action.create'|trans }}" class="{{ 'btn btn-light' }}">
                {{ 'create an event'|trans }}
            </a>
            <a href="{{ url('todays_events') }}" title="{{ 'todays_events'|trans }}">
                {{ 'title.todays_events'|trans }}
            </a>

        </th>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'event.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'event.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.updated_at'|trans, 'event.updatedAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.name'|trans, 'event.name') }}</th>
                <th>{{ 'label.category'|trans }}</th>
                <th>{{ 'label.date' |trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for event in pagination.items %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td>{{ event.createdAt|format_date('long') }}</td>
                    <td>{{ event.updatedAt|format_date('long') }}</td>
                    <td>{{ event.name }}</td>
                    <td>{{ event.category.title }}</td>
                    <td>{{ event.date|format_date('long') }}</td>
                    <td>

                        <a href="{{ url('event_show', {id: event.id}) }}" title="{{ 'event.show'|trans }}">
                            {{ 'action.show'|trans }}
                        </a>
                        <a href="{{ url('event_edit', {id: event.id}) }}" title="{{ 'event.edit'|trans }}">
                            {{ 'edit'|trans }}
                        </a>

                        <a href="{{ url('event_delete', {id: event.id}) }}" title="{{ 'event.delete'|trans }}">
                            {{ 'delete'|trans }}
                        </a>

                        <a href="{{ url('event_index', {'filters.category_id' : event.category.id}) }}" title="{{ event.category.title }}">
                            {{ event.category.title }}
                        </a>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}
