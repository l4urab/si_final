{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.contact_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.contact_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <th><a href="{{ url('contact_create') }}" title="{{ 'action.create'|trans }}" class="{{ 'btn btn-light' }}">
                {{ 'create a contact'|trans }}
            </a>
        </th>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'contact.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'contact.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.updated_at'|trans, 'contact.updatedAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.name'|trans, 'contact.name') }}</th>
                <th>{{ 'label.email'|trans }}</th>
                <th>{{ 'label.phoneNumber'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for contact in pagination.items %}
                <tr>
                    <td>{{ contact.id }}</td>
                    <td>{{ contact.createdAt|format_date('long') }}</td>
                    <td>{{ contact.updatedAt|format_date('long') }}</td>
                    <td>{{ contact.name }}</td>
                    <td>{{ contact.email }}</td>
                    <td>{{ contact.phoneNumber }}</td>
                    <td>

                        <a href="{{ url('contact_show', {id: contact.id}) }}" title="{{ 'action.show'|trans }}">
                            {{ 'action.show'|trans }}
                        </a>
                        <a href="{{ url('contact_edit', {id: contact.id}) }}" title="{{ 'action.edit'|trans }}">
                            {{ 'edit'|trans }}
                        </a>

                        <a href="{{ url('contact_delete', {id: contact.id}) }}" title="{{ 'action.delete'|trans }}">
                            {{ 'delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}
